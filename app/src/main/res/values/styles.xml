<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


  <style name="AppTheme.ClassificationStyle" parent="AppTheme">
    <item name="android:background">@color/colorPrimaryDark</item>
  </style>

  <style name="AppTheme.ClassificationHeaderStyle" parent="AppTheme">
    <item name="android:textColor">#FFFF</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="AppTheme.PlayerStatisticTextStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/player_statistic_normal_padding</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">10sp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="AppTheme.PlayerStatisticHighlightTextStyle">
    <item name="android:padding">@dimen/player_statistic_highlights_padding</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="AppTheme.CardViewStyle" parent="CardView">
    <item name="cardBackgroundColor">@color/cardViewBackgroundColor</item>
  </style>

  <style name="AppTheme.TeamStatisticRowTextStyle">
    <item name="android:layout_marginBottom">4dp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="AppTheme.NewsArticleCollapse">
    <item name="android:textColor">@color/lightTextColor</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="AppTheme.NewsArticleCollapse.Expanded" parent="AppTheme.NewsArticleCollapse">
    <item name="android:textSize">24sp</item>
  </style>

    <style name="AppTheme.NewsArticleCollapse.Collapsed" parent="AppTheme.NewsArticleCollapse">
    <item name="android:textSize">14sp</item>
  </style>

</resources>
