<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="@dimen/news_article_row_image_height"
  android:minHeight="@dimen/news_article_row_image_height"
  >

      <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/newsArticleImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

          <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_article_row_title_size"
            android:textColor="@color/newTitleTextColor"
            android:gravity="center|bottom"
            android:padding="@dimen/news_title_padding"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

</RelativeLayout>