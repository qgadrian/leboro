<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="@dimen/news_article_row_image_height"
  android:minHeight="@dimen/news_article_row_image_height"
  >

  <com.android.volley.toolbox.NetworkImageView
    android:id="@+id/newsArticleImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    />

  <TextView
    android:id="@+id/newsTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/news_article_row_title_size"
    android:textColor="@color/newTitleTextColor"
    android:gravity="center|bottom"
    android:padding="@dimen/news_title_padding"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    />

    <TextView
      android:id="@+id/newsProviderLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/newTitleTextColor"
      android:background="@drawable/tag_provider_label"
      android:padding="4dp"
      android:layout_marginTop="4dp"
      android:layout_marginRight="4dp"
      android:layout_marginEnd="4dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      />

</RelativeLayout>