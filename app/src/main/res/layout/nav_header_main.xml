<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/navigationDrawerBackgroundColor"
  android:orientation="horizontal"
  android:paddingTop="@dimen/nav_header_padding_top"
  android:paddingRight="@dimen/nav_header_padding_end"
  android:paddingEnd="@dimen/nav_header_padding_end"
  android:paddingStart="@dimen/nav_header_padding_start"
  android:paddingLeft="@dimen/nav_header_padding_start"
  android:paddingBottom="@dimen/nav_header_padding_bottom"
  android:theme="@style/ThemeOverlay.AppCompat.Dark"
  android:fitsSystemWindows="true"
  >

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@mipmap/ic_launcher"
      />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_header_title"
        android:textColor="@color/navigationDrawerTextColor"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        />

      <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navigationDrawerTextColor"
        android:text="@string/navigation_header_subtitle"
        />

    </LinearLayout>

</LinearLayout>
