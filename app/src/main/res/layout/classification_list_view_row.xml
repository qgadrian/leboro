<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:minHeight="64dp"
  android:orientation="horizontal"
  >

    <TextView
      android:id="@+id/classificationListPosition"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="center"
      android:layout_weight="1.55"
      android:gravity="center"
      android:textStyle="bold"
      android:textSize="16sp"
      />

    <com.android.volley.toolbox.NetworkImageView
      android:id="@+id/classificationListLogo"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:padding="@dimen/classification_logo_padding"
      />

    <TextView
      android:id="@+id/classificationListTeamName"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:gravity="center"
      android:padding="@dimen/classification_team_name_padding"
      />

    <TextView
      android:id="@+id/classificationListGamesWon"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="center"
      android:layout_weight="1.5"
      android:gravity="center"
      />

    <TextView
      android:id="@+id/classificationListGamesLost"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="center"
      android:layout_weight="1.5"
      android:gravity="center"
      />

        <TextView
          android:id="@+id/classificationListPoints"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_weight="1.5"
          />

</LinearLayout>